---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import BackgroundImg from '../assets/images/background.jpg';
---

<Layout title="TAVUE - Créez vos lunettes sur mesure">
	<Header />
	
	<main class="hero-section">
		<div class="hero-left">
			<div class="hero-text">
				<h1 class="hero-title">
					Créez vos lunettes<br />
					<span class="highlight">parfaites</span>
				</h1>
				<p class="hero-subtitle">
					Personnalisez chaque détail ou laissez l'intelligence artificielle<br />
					créer le design unique qui vous ressemble
				</p>
			</div>
			
			<div class="hero-buttons">
				<a href="/configurateur" class="btn-primary">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<circle cx="12" cy="12" r="3"/>
						<path d="M12 1v6m0 6v6"/>
						<path d="m4.93 4.93 4.24 4.24m5.66 5.66 4.24 4.24"/>
						<path d="m1 12h6m6 0h6"/>
						<path d="m4.93 19.07 4.24-4.24m5.66-5.66 4.24-4.24"/>
					</svg>
					Personnaliser mes lunettes
				</a>
				
				<a href="/lunettes-ia" class="btn-secondary">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M12 2a2 2 0 0 1 2 2c0 .74-.4 1.39-1 1.73V7h1a7 7 0 0 1 7 7h1a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v1a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-1H2a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h1a7 7 0 0 1 7-7h1V5.73c-.6-.34-1-.99-1-1.73a2 2 0 0 1 2-2z"/>
						<path d="M14 22v-4a2 2 0 0 0-2-2v0a2 2 0 0 0-2 2v4"/>
					</svg>
					Générer avec l'IA
				</a>
			</div>
		</div>

		<div class="hero-right">
			<img src={BackgroundImg.src} alt="Lunettes" class="hero-image" />
		</div>
	</main>
</Layout>

<style>
	.hero-section {
		display: grid;
		grid-template-columns: 40% 60%;
		min-height: calc(100vh - 80px);
		background-color: #f5f5f0;
	}

	.hero-left {
		background-color: #ffffff;
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: flex-start;
		padding: 4rem 5rem;
		gap: 3rem;
	}

	.hero-right {
		position: relative;
		overflow: hidden;
		display: flex;
		align-items: center;
		justify-content: center;
		background-color: #f5f5f0;
		padding: 0;
	}

	.hero-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
		border-radius: 0;
	}

	.hero-text {
		width: 100%;
	}

	.hero-title {
		font-family: 'Inter', var(--font-title);
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 800;
		color: #2A2017;
		margin: 0 0 1.5rem 0;
		line-height: 1.1;
		letter-spacing: -0.02em;
		text-transform: uppercase;
	}

	.highlight {
		background: linear-gradient(135deg, #8B6F47 0%, #6B5333 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		display: inline-block;
		animation: shimmer 3s infinite;
	}

	.hero-subtitle {
		font-family: 'Courier New', 'Courier', monospace;
		font-size: clamp(1rem, 1.5vw, 1.125rem);
		color: #2A2017;
		margin: 0;
		line-height: 1.8;
		font-weight: 400;
	}

	.hero-buttons {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		width: 100%;
		max-width: 400px;
	}

	.btn-primary,
	.btn-secondary {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.75rem;
		padding: 1rem 2rem;
		font-family: var(--font-body);
		font-size: 0.95rem;
		font-weight: 600;
		text-decoration: none;
		border-radius: 50px;
		transition: all 0.3s ease;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
		width: 100%;
	}

	.btn-primary {
		background: linear-gradient(135deg, #2A2017 0%, #1a1410 100%);
		color: white;
		border: 2px solid transparent;
	}

	.btn-primary:hover {
		transform: translateY(-4px);
		box-shadow: 0 15px 40px rgba(42, 32, 23, 0.3);
		background: linear-gradient(135deg, #1a1410 0%, #000000 100%);
	}

	.btn-secondary {
		background: linear-gradient(135deg, #8B6F47 0%, #6B5333 100%);
		color: white;
		border: 2px solid transparent;
	}

	.btn-secondary:hover {
		transform: translateY(-4px);
		box-shadow: 0 15px 40px rgba(139, 111, 71, 0.4);
		background: linear-gradient(135deg, #6B5333 0%, #4A3820 100%);
	}

	.btn-primary:active,
	.btn-secondary:active {
		transform: translateY(-2px) scale(0.98);
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes shimmer {
		0%, 100% {
			filter: brightness(1);
		}
		50% {
			filter: brightness(1.2);
		}
	}

	/* Responsive */
	@media (max-width: 768px) {
		.hero-section {
			grid-template-columns: 1fr;
			min-height: auto;
		}

		.hero-left {
			padding: 2rem;
			order: 1;
		}

		.hero-right {
			order: 2;
			min-height: 50vh;
			padding: 1rem;
		}

		.hero-title {
			margin-bottom: 1rem;
		}

		.hero-buttons {
			max-width: 100%;
		}
	}
</style>
