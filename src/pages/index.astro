---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import BackgroundImg from '../assets/images/background.jpg';
---

<Layout title="TAVUE - Créez vos lunettes sur mesure">
	<Header />
	
	<main class="grid grid-cols-[40%_60%] min-h-[calc(100vh-80px)] bg-[#f5f5f0] max-md:grid-cols-1">
		<div class="bg-white flex flex-col justify-center items-start p-16 gap-12 max-md:p-8 max-md:order-1">
			<div class="w-full">
				<h1 class="hero-title">
					Créez vos lunettes<br />
					<span class="hero-highlight">parfaites</span>
				</h1>
				<p class="font-['Courier_New',Courier,monospace] text-lg text-[#2A2017] leading-relaxed mt-6">
					Personnalisez chaque détail ou laissez l'intelligence artificielle<br />
					créer le design unique qui vous ressemble
				</p>
			</div>
			
			<div class="flex flex-col gap-4 w-full max-w-[400px]">
				<a href="/configurateur" class="inline-flex items-center justify-center gap-3 px-8 py-4 text-white text-sm font-semibold uppercase tracking-wider rounded-full transition-all duration-300 shadow-lg hover:-translate-y-1 hover:shadow-xl active:translate-y-0 active:scale-[0.98] w-full bg-gradient-to-br from-[#2A2017] to-[#1a1410] hover:from-[#1a1410] hover:to-black">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<circle cx="12" cy="12" r="3"/>
						<path d="M12 1v6m0 6v6"/>
						<path d="m4.93 4.93 4.24 4.24m5.66 5.66 4.24 4.24"/>
						<path d="m1 12h6m6 0h6"/>
						<path d="m4.93 19.07 4.24-4.24m5.66-5.66 4.24-4.24"/>
					</svg>
					Personnaliser mes lunettes
				</a>
				
				<a href="/lunettes-ia" class="inline-flex items-center justify-center gap-3 px-8 py-4 text-white text-sm font-semibold uppercase tracking-wider rounded-full transition-all duration-300 shadow-lg hover:-translate-y-1 hover:shadow-xl active:translate-y-0 active:scale-[0.98] w-full bg-gradient-to-br from-[#8B6F47] to-[#6B5333] hover:from-[#6B5333] hover:to-[#4A3820]">
					<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<path d="M12 2a2 2 0 0 1 2 2c0 .74-.4 1.39-1 1.73V7h1a7 7 0 0 1 7 7h1a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v1a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-1H2a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h1a7 7 0 0 1 7-7h1V5.73c-.6-.34-1-.99-1-1.73a2 2 0 0 1 2-2z"/>
						<path d="M14 22v-4a2 2 0 0 0-2-2v0a2 2 0 0 0-2 2v4"/>
					</svg>
					Générer avec l'IA
				</a>
			</div>
		</div>

		<div class="relative overflow-hidden flex items-center justify-center bg-[#f5f5f0] max-md:min-h-[50vh] max-md:order-2">
			<img src={BackgroundImg.src} alt="Lunettes" class="w-full h-full object-cover" />
		</div>
	</main>
</Layout>

<style>
	.hero-title {
		font-family: 'Inter', var(--font-title);
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 800;
		color: #2A2017;
		line-height: 1.1;
		letter-spacing: -0.02em;
		text-transform: uppercase;
	}

	.hero-highlight {
		background: linear-gradient(135deg, #8B6F47 0%, #6B5333 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		animation: shimmer 3s infinite;
	}

	@keyframes shimmer {
		0%, 100% { filter: brightness(1); }
		50% { filter: brightness(1.2); }
	}
</style>
