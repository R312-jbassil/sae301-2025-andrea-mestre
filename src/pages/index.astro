---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import BackgroundImg from '../assets/images/background.jpg';
import IconLunette from '../assets/iconlunette.svg';
import IconIA from '../assets/ia.svg';
---

<Layout title="TAVUE - Créez vos lunettes sur mesure">
	<Header />
	
	<main class="grid grid-cols-[40%_60%] min-h-[calc(100vh-80px)] bg-[#f5f5f0] max-md:grid-cols-1">
		<div class="bg-white flex flex-col justify-center items-start p-16 gap-12 max-md:p-8 max-md:order-1">
			<div class="w-full">
				<h1 class="hero-title">
					Créez vos lunettes<br />
					<span class="hero-highlight">parfaites</span>
				</h1>
				<p class="font-['Courier_New',Courier,monospace] text-lg leading-relaxed mt-6" style="color: var(--color-brand-brown);">
					Personnalisez chaque détail ou laissez l'intelligence artificielle<br />
					créer le design unique qui vous ressemble
				</p>
			</div>
			
			<div class="flex gap-4 w-full max-md:flex-col">
				<a href="/configurateur" class="inline-flex items-center justify-center gap-3 px-6 py-4 text-white text-sm font-semibold uppercase tracking-wider rounded-full transition-all duration-300 shadow-lg hover:-translate-y-1 hover:shadow-xl active:translate-y-0 active:scale-[0.98] flex-1" style="background: linear-gradient(135deg, var(--color-brand-brown) 0%, #1a1410 100%);">
					<img src={IconLunette.src} alt="" width="20" height="20" class="brightness-0 invert" />
					Personnaliser
				</a>
				
				<a href="/lunettes-ia" class="inline-flex items-center justify-center gap-3 px-6 py-4 text-white text-sm font-semibold uppercase tracking-wider rounded-full transition-all duration-300 shadow-lg hover:-translate-y-1 hover:shadow-xl active:translate-y-0 active:scale-[0.98] flex-1" style="background: linear-gradient(135deg, var(--color-brand-light) 0%, #6B5333 100%);">
					<img src={IconIA.src} alt="" width="20" height="20" class="brightness-0 invert" />
					Générer IA
				</a>
			</div>
		</div>

		<div class="relative overflow-hidden flex items-center justify-center bg-[#f5f5f0] max-md:min-h-[50vh] max-md:order-2">
			<img src={BackgroundImg.src} alt="Lunettes" class="w-full h-full object-cover" />
		</div>
	</main>
</Layout>

<style>
	.hero-title {
		font-family: 'Inter', var(--font-title);
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 800;
		color: var(--color-brand-brown);
		line-height: 1.1;
		letter-spacing: -0.02em;
		text-transform: uppercase;
	}

	.hero-highlight {
		background: linear-gradient(135deg, var(--color-brand-light) 0%, #6B5333 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		animation: shimmer 3s infinite;
	}

	@keyframes shimmer {
		0%, 100% { filter: brightness(1); }
		50% { filter: brightness(1.2); }
	}
</style>
