---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import pb from '../../utils/pb';

// Récupération de l'ID depuis l'URL
const { id } = Astro.params;

let lunette: any = null;
let error = '';

if (id) {
  try {
    // Récupérer les détails de la lunette spécifique
    lunette = await pb.collection('lunette').getOne(id);
  } catch (e: any) {
    console.error('Erreur lors de la récupération de la lunette:', e);
    error = e.message;
  }
}

// Si pas d'ID ou erreur, redirection ou affichage d'erreur
if (!id || error || !lunette) {
  // En production, vous pouvez rediriger vers la galerie
  // return Astro.redirect('/galerie');
}

// Récupérer l'URL de l'image si elle existe
const imageUrl = lunette?.image ? pb.files.getUrl(lunette, lunette.image) : null;
---

<Layout title={`${lunette?.nom_personnalisation || lunette?.nom_modele || 'Lunette'} - TAVUE`}>
  <Header />
  
  <main class="min-h-[calc(100vh-80px)] bg-gray-50">
    {error || !lunette ? (
      <div class="flex flex-col items-center justify-center min-h-[60vh] p-10 text-center">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-red-600 mb-6">
          <circle cx="12" cy="12" r="10"></circle>
          <line x1="12" y1="8" x2="12" y2="12"></line>
          <line x1="12" y1="16" x2="12.01" y2="16"></line>
        </svg>
        <h1 class="text-4xl font-bold text-gray-900 mb-4" style="font-family: var(--font-title);">Lunette introuvable</h1>
        <p class="text-lg text-gray-600 mb-8" style="font-family: var(--font-body);">La lunette que vous recherchez n'existe pas ou a été supprimée.</p>
        <a href="/galerie" class="px-8 py-3 bg-[#2A2017] text-white rounded-lg font-semibold hover:bg-[#1a1410] transition-colors" style="font-family: var(--font-btn);">Retour à la galerie</a>
      </div>
    ) : (
      <div class="max-w-7xl mx-auto p-10">
        <!-- Navigation breadcrumb -->
        <nav class="flex items-center gap-3 mb-8 text-sm" style="font-family: var(--font-body);">
          <a href="/" class="text-gray-600 hover:text-[#2A2017] transition-colors no-underline">Accueil</a>
          <span class="text-gray-300">/</span>
          <a href="/galerie" class="text-gray-600 hover:text-[#2A2017] transition-colors no-underline">Ma Galerie</a>
          <span class="text-gray-300">/</span>
          <span class="text-gray-900 font-medium">{lunette.nom_personnalisation || lunette.nom_modele}</span>
        </nav>

        <div class="grid lg:grid-cols-2 gap-12 bg-white rounded-2xl p-12 shadow-sm">
          <!-- Section image -->
          <div class="flex flex-col gap-6">
            <div class="w-full aspect-[4/3] bg-gradient-to-br from-gray-100 to-gray-200 rounded-xl flex items-center justify-center overflow-hidden">
              {imageUrl ? (
                <img src={imageUrl} alt={lunette.nom_personnalisation || lunette.nom_modele} class="w-full h-full object-cover" />
              ) : (
                <svg viewBox="0 0 200 80" xmlns="http://www.w3.org/2000/svg" class="w-1/2 h-auto text-gray-400">
                  <g stroke="currentColor" stroke-width="3" fill="none">
                    <circle cx="50" cy="40" r="25" />
                    <circle cx="150" cy="40" r="25" />
                    <line x1="75" y1="40" x2="125" y2="40" />
                    <line x1="25" y1="40" x2="10" y2="35" />
                    <line x1="175" y1="40" x2="190" y2="35" />
                  </g>
                </svg>
              )}
            </div>
            
            <div class="flex gap-3">
              <button class="flex-1 flex items-center justify-center gap-2 px-6 py-3.5 bg-white text-gray-900 border border-gray-200 rounded-xl font-semibold hover:bg-gray-50 hover:border-gray-300 transition-all" style="font-family: var(--font-btn);">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                  <polyline points="7 10 12 15 17 10"></polyline>
                  <line x1="12" y1="15" x2="12" y2="3"></line>
                </svg>
                Télécharger l'image
              </button>
              <button class="flex-1 flex items-center justify-center gap-2 px-6 py-3.5 bg-white text-gray-900 border border-gray-200 rounded-xl font-semibold hover:bg-gray-50 hover:border-gray-300 transition-all" style="font-family: var(--font-btn);">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                  <polyline points="15 3 21 3 21 9"></polyline>
                  <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
                Partager
              </button>
            </div>
          </div>

          <!-- Section détails -->
          <div class="flex flex-col gap-8">
            <div class="flex justify-between items-start gap-6 pb-6 border-b-2 border-gray-200">
              <div>
                <h1 class="text-4xl font-bold text-gray-900 mb-2 leading-tight" style="font-family: var(--font-title);">{lunette.nom_personnalisation || lunette.nom_modele}</h1>
                {lunette.nom_personnalisation && (
                  <p class="text-base text-gray-600" style="font-family: var(--font-body);">Basé sur le modèle {lunette.nom_modele}</p>
                )}
              </div>
              <div class="text-4xl font-bold text-[#2A2017] whitespace-nowrap" style="font-family: var(--font-title);">{lunette.prix} €</div>
            </div>

            <div class="grid grid-cols-2 gap-5">
              {lunette.taille && (
                <div class="flex flex-col gap-1.5">
                  <span class="text-sm font-medium text-gray-600 uppercase tracking-wide" style="font-family: var(--font-body);">Taille</span>
                  <span class="text-lg font-semibold text-gray-900" style="font-family: var(--font-body);">{lunette.taille}</span>
                </div>
              )}
              
              {lunette.verres && (
                <div class="flex flex-col gap-1.5">
                  <span class="text-sm font-medium text-gray-600 uppercase tracking-wide" style="font-family: var(--font-body);">Verres</span>
                  <span class="text-lg font-semibold text-gray-900" style="font-family: var(--font-body);">{lunette.verres}</span>
                </div>
              )}
              
              {lunette.cercles && (
                <div class="flex flex-col gap-1.5">
                  <span class="text-sm font-medium text-gray-600 uppercase tracking-wide" style="font-family: var(--font-body);">Cercles</span>
                  <span class="text-lg font-semibold text-gray-900" style="font-family: var(--font-body);">{lunette.cercles}</span>
                </div>
              )}
              
              {lunette.branche && (
                <div class="flex flex-col gap-1.5">
                  <span class="text-sm font-medium text-gray-600 uppercase tracking-wide" style="font-family: var(--font-body);">Branches</span>
                  <span class="text-lg font-semibold text-gray-900" style="font-family: var(--font-body);">{lunette.branche}</span>
                </div>
              )}

              {lunette.materiau && (
                <div class="flex flex-col gap-1.5">
                  <span class="text-sm font-medium text-gray-600 uppercase tracking-wide" style="font-family: var(--font-body);">Matériau</span>
                  <span class="text-lg font-semibold text-gray-900" style="font-family: var(--font-body);">{lunette.materiau}</span>
                </div>
              )}
            </div>

            {lunette.description && (
              <div class="pt-6 border-t border-gray-200">
                <h2 class="text-xl font-bold text-gray-900 mb-3" style="font-family: var(--font-title);">Description</h2>
                <p class="text-base leading-relaxed text-gray-700" style="font-family: var(--font-body);">{lunette.description}</p>
              </div>
            )}

            <div class="flex flex-col gap-3 pt-6 border-t border-gray-200">
              <a href={`/configurateur?edit=${id}`} class="flex items-center justify-center gap-2 px-6 py-3.5 bg-[#2A2017] text-white rounded-xl font-semibold hover:bg-[#1a1410] hover:-translate-y-0.5 hover:shadow-lg transition-all no-underline" style="font-family: var(--font-btn);">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                  <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                </svg>
                Modifier cette lunette
              </a>
              
              <button class="flex items-center justify-center gap-2 px-6 py-3.5 bg-[#2A2017] text-white rounded-xl font-semibold hover:bg-[#1a1410] hover:-translate-y-0.5 hover:shadow-lg transition-all" style="font-family: var(--font-btn);" id="commanderBtn">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="9" cy="21" r="1"></circle>
                  <circle cx="20" cy="21" r="1"></circle>
                  <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                </svg>
                Commander
              </button>
              
              <button class="flex items-center justify-center gap-2 px-6 py-3.5 bg-red-50 text-red-600 border border-red-200 rounded-xl font-semibold hover:bg-red-600 hover:text-white hover:border-red-600 transition-all" style="font-family: var(--font-btn);" id="deleteBtn">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="3 6 5 6 21 6"></polyline>
                  <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                </svg>
                Supprimer
              </button>
            </div>

            <div class="flex flex-col gap-2 pt-6 border-t border-gray-200">
              <div class="flex items-center gap-2 text-sm text-gray-600" style="font-family: var(--font-body);">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="flex-shrink-0">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="16" y1="2" x2="16" y2="6"></line>
                  <line x1="8" y1="2" x2="8" y2="6"></line>
                  <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                <span>Créé le {new Date(lunette.created).toLocaleDateString('fr-FR', { day: 'numeric', month: 'long', year: 'numeric' })}</span>
              </div>
              
              {lunette.updated && (
                <div class="flex items-center gap-2 text-sm text-gray-600" style="font-family: var(--font-body);">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="flex-shrink-0">
                    <polyline points="23 4 23 10 17 10"></polyline>
                    <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
                  </svg>
                  <span>Modifié le {new Date(lunette.updated).toLocaleDateString('fr-FR', { day: 'numeric', month: 'long', year: 'numeric' })}</span>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>
    )}
  </main>
</Layout>

<style>
  /* CSS minimal - Tout le reste est en Tailwind */
</style>

<script>
  import { deleteLunette } from '../../utils/pb';

  // Récupérer l'ID de la lunette depuis l'URL
  const lunetteId = window.location.pathname.split('/').pop();

  // Gestion du bouton de suppression
  const deleteBtn = document.getElementById('deleteBtn') as HTMLButtonElement;
  if (deleteBtn) {
    deleteBtn.addEventListener('click', async () => {
      if (confirm('Êtes-vous sûr de vouloir supprimer cette lunette ? Cette action est irréversible.')) {
        try {
          // Désactiver le bouton pendant la suppression
          deleteBtn.disabled = true;
          deleteBtn.textContent = 'Suppression...';

          // Appeler la fonction de suppression
          const result = await deleteLunette(lunetteId!);
          
          if (result.success) {
            alert('Lunette supprimée avec succès !');
            // Redirection vers la galerie après suppression
            window.location.href = '/galerie';
          } else {
            alert(`Erreur lors de la suppression : ${result.error}`);
            deleteBtn.disabled = false;
            deleteBtn.innerHTML = `
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="3 6 5 6 21 6"></polyline>
                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
              </svg>
              Supprimer
            `;
          }
        } catch (error) {
          console.error('Erreur lors de la suppression:', error);
          alert('Une erreur est survenue lors de la suppression.');
          deleteBtn.disabled = false;
          deleteBtn.innerHTML = `
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="3 6 5 6 21 6"></polyline>
              <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
            </svg>
            Supprimer
          `;
        }
      }
    });
  }

  // Gestion du bouton commander
  const commanderBtn = document.getElementById('commanderBtn');
  if (commanderBtn) {
    commanderBtn.addEventListener('click', () => {
      // Logique de commande à implémenter
      alert('Fonctionnalité de commande à venir !');
    });
  }
</script>
