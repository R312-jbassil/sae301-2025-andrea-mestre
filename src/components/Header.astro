---
// Import du logo SVG
import LogoSvg from '../assets/Logo_sae.svg?raw';
---

<header class="bg-white border-b border-gray-200 sticky top-0 z-50">
  <div class="max-w-full mx-auto px-12">
    <div class="flex items-center h-20">
      
      <!-- Logo TAVUE -->
      <a href="/" class="flex flex-col items-center hover:opacity-80 transition-opacity mr-16">
        <div class="w-10 h-10" set:html={LogoSvg}></div>
      </a>

      <!-- Navigation principale -->
      <nav class="hidden lg:flex items-center gap-12 flex-1 justify-center">
        <a href="/modeles" class="text-lg text-gray-800 hover:text-[#92400e] transition-colors whitespace-nowrap no-underline">
          Nos meilleurs modèles
        </a>
        <a href="/personnaliser" class="text-lg text-gray-800 hover:text-[#92400e] transition-colors whitespace-nowrap no-underline">
          Personnaliser
        </a>
        <a href="/galerie" class="text-lg text-gray-800 hover:text-[#92400e] transition-colors whitespace-nowrap no-underline">
          Ma galerie
        </a>
        <a href="/lunettes-ia" class="text-lg text-gray-800 hover:text-[#92400e] transition-colors whitespace-nowrap no-underline">
          Lunettes IA
        </a>
        <a href="/promos" class="text-lg text-gray-800 hover:text-[#92400e] transition-colors whitespace-nowrap no-underline">
          Promos
        </a>
      </nav>

      <!-- Icônes d'action -->
      <div class="flex items-center gap-6">
        <!-- Recherche -->
        <button 
          class="flex items-center justify-center p-2 text-gray-800 hover:text-[#92400e] hover:bg-gray-100 rounded-md transition-all cursor-pointer border-0 bg-transparent"
          aria-label="Rechercher"
          title="Rechercher"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
          </svg>
        </button>

        <!-- Favoris -->
        <button 
          class="flex items-center justify-center p-2 text-gray-800 hover:text-[#92400e] hover:bg-gray-100 rounded-md transition-all cursor-pointer border-0 bg-transparent"
          aria-label="Favoris"
          title="Favoris"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z" />
          </svg>
        </button>

        <!-- Compte utilisateur -->
        <button 
          class="flex items-center justify-center p-2 text-gray-800 hover:text-[#92400e] hover:bg-gray-100 rounded-md transition-all cursor-pointer border-0 bg-transparent"
          aria-label="Mon compte"
          title="Mon compte"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
          </svg>
        </button>

        <!-- Panier -->
        <button 
          class="flex items-center justify-center p-2 text-gray-800 hover:text-[#92400e] hover:bg-gray-100 rounded-md transition-all cursor-pointer border-0 bg-transparent"
          aria-label="Panier"
          title="Panier"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Menu mobile (caché par défaut) -->
    <nav id="mobile-menu" class="lg:hidden hidden pb-4">
      <div class="flex flex-col gap-3">
        <a href="/modeles" class="text-lg text-gray-800 hover:text-[#92400e] hover:bg-gray-100 no-underline px-4 py-3 rounded-md transition-all">
          Nos meilleurs modèles
        </a>
        <a href="/personnaliser" class="text-lg text-gray-800 hover:text-[#92400e] hover:bg-gray-100 no-underline px-4 py-3 rounded-md transition-all">
          Personnaliser
        </a>
        <a href="/galerie" class="text-lg text-gray-800 hover:text-[#92400e] hover:bg-gray-100 no-underline px-4 py-3 rounded-md transition-all">
          Ma galerie
        </a>
        <a href="/lunettes-ia" class="text-lg text-gray-800 hover:text-[#92400e] hover:bg-gray-100 no-underline px-4 py-3 rounded-md transition-all">
          Lunettes IA
        </a>
        <a href="/promos" class="text-lg text-gray-800 hover:text-[#92400e] hover:bg-gray-100 no-underline px-4 py-3 rounded-md transition-all">
          Promos
        </a>
      </div>
    </nav>
  </div>
</header>
